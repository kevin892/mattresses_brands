<form action="/mattresses/<%= @mattress.id %>" method="POST">
  <label for="model">Model:
  </label>
  <input type="text" name="model" id="model" value="<%= @mattress.model %>"/>

  <label for="quality">Quality:
  </label>
  <input type="text" name="quality" id="quality" value="<%= @mattress.quality %>"/>

  <input type="submit" value="Edit"/>

  <input type="hidden" name="_method" value="PUT"/>
</form>

<form action="/mattresses/<%= @mattress.id %>" method="POST">
  <input type="submit" value="Delete this mattress"/>
  <input type="hidden" name="_method" value="DELETE"/>
</form>
